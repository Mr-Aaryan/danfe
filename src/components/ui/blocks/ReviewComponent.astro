---
import Avatar from "../../ui/avatars/Avatar.astro";
import FullStar from "../../ui/stars/FullStar.astro";
import HalfStar from "../../ui/stars/HalfStar.astro";

const { avatars, starCount = 0, rating, reviews } = Astro.props;

interface Props {
  avatars?: Array<string>;
  starCount?: number;
  rating?: string;
  reviews?: string;
}
---

<div class="mt-2 lg:mt-6">
  <div class="py-5">
      <!-- Review Ratings -->
      <div class=" flex flex-col sm:items-start">
        <div class="flex items-baseline space-x-1 pt-5 sm:ps-2  sm:pt-0">
          <div class="flex space-x-1">
            <!-- Your star ratings -->
            {
              Array(starCount)
                .fill(0)
                .map((_, i) => <FullStar key={i} />)
            }
            <!-- Adding additional half-star -->
            <HalfStar />
          </div>
          <p class="text-neutral-800 dark:text-neutral-200">
            <Fragment set:html={rating} />
          </p>
        </div>
        <div class="text-sm text-neutral-800 dark:text-neutral-200 sm:ps-2">
          <p>
            <Fragment set:html={reviews} />
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
