---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@/components/sections/ContactSection.astro";
import { SITE } from "@/data_files/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://danfe.pages.dev/contact",
    "url": "https://danfe.pages.dev/contact",
    "name": "Contact Us | Danfe",
    "description":
      "Have questions or want to discuss a project? Reach out, and let's craft the perfect solution with our tools and services.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://danfe.pages.dev",
      "name": "Danfe",
      "description":
        "Danfe offers top-tier web development services to meet all your project needs.",
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection />
</MainLayout>
