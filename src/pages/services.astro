---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@/components/ui/blocks/MainSection.astro";
import LeftSection from "@/components/ui/blocks/LeftSection.astro";
import RightSection from "@/components/ui/blocks/RightSection.astro";
import FeaturesStats from "@/components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@/images/blueprints-image.png";
import personWorking from "@/images/person-working.jpg";
import beforeAfter from "@/images/before-after.jpg";
import webDesigners from "@/images/design-team.jpg";
import aerialView from "@/images/aerial-view.png";
import usingTools from "@/images/using-tools.jpg";
import showCaseI from "@/images/show-case-1.png";
import underConstruction from "@/images/show-case-2.png";
import { SITE } from "@/data_files/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Providing Expert Guidance",
    subTitle:
      "Starting a website project can feel overwhelming. With our professional consultation services, we guide you through each stage, ensuring informed decision-making. Whether you're a novice or an experienced developer, our experts are available to provide personalized advice on website features, project scope, and adherence to industry standards and regulations.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Turning Designs into Reality",
    subTitle:
      "Our expert developers at Danfe transform your website designs into fully functional digital experiences. Whether it's implementing minor enhancements or executing complex features, we deliver reliable website construction services to bring your vision to life. We prioritize safety and craftsmanship, using top-quality tools and technologies to ensure the highest standards of performance and user experience.",
    img: beforeAfter,
    imgAlt: "Construction site before and after",
    btnExists: false,
  },
  {
    isRightSection: true,
    title: "Guiding Projects with Professional Oversight",
    subTitle:
      "At Danfe, we understand that effective project management is crucial for success. We offer comprehensive planning and robust management services to keep your website project on track and within budget. Let us take care of the intricacies of workflow coordination, resource allocation, and stakeholder communication while you stay focused on realizing your vision.",
    single: false,
    imgOne: webDesigners,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "Ensuring Sustainable Performance",
    subTitle:
      "At Danfe, our dedication to your project extends beyond completion. We provide continuous maintenance and support services to ensure the long-term performance and sustainability of your website. Whether it's routine check-ups or urgent assistance, our responsive team is always available to deliver seamless support and keep your website running smoothly.",
    img: usingTools,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Developing Tailored Strategies for Unique Challenges",
    subTitle:
      "At Danfe, we specialize in crafting custom solutions for our enterprise clients to address specific industry challenges. By thoroughly understanding your unique needs, we design tailored strategies aimed at optimizing operations, improving efficiency, and propelling your business forward. Our goal is to deliver innovative solutions that align perfectly with your objectives and drive success in your industry.",
    single: false,
    imgOne: showCaseI,
    imgOneAlt: "In progress building structure",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: false,
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://danfe.pages.dev/services",
    "url": "https://danfe.pages.dev/services",
    "name": "Expert Consultation Services | Danfe",
    "description": "Uniting expertise with your vision, Danfe provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://danfe.pages.dev",
        "name": "Danfe",
        "description": "Danfe offers top-tier web development services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Bringing Expertise Together with Your Vision"
    subTitle="At Danfe, we are dedicated to offering comprehensive solutions and exceptional service in the website building and digital sector. Our experienced team is committed to supporting your project from concept to launch with a suite of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="https://www.facebook.com/danfesolutions"
  />
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="At Danfe, our dedication to quality and reliability shines through in every project we undertake. We are committed to providing industry-leading services that guarantee your website projects are built for long-term success and sustainability."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Danfe as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "100+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
